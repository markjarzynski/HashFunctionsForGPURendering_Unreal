    float3 pos2 = pos;
    pos2.yz += 0.07 * hash2(pos.yz * 0.005);
    pos2.z += 0.5 * brickStep.z * floor(0.5 * pos2.y / brickStep.y);
    float2 nb = floor(pos2.yz / brickStep.yz * float2(0.5, 1.));
