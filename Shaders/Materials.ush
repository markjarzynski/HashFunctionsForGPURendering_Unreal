    brickCol = lerp(brickCol, brickCol3, pow(smoothstep(0.1, 1.05, 1.2 * hash2(pos.yz * 0.18) * hash2(pos.yz * 0.23)), 1.5));
    brickCol *= 0.4 + 0.6 * smoothstep(0.80, 0.60, hash2(pos.yz * 0.07));
    return brickCol;
    
